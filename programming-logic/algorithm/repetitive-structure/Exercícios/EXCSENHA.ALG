Algoritmo "excSenha"

Var

   senha : inteiro

Inicio

      senha <- 2002
      
      escreva("Digite a senha para ter acesso aos arquivos: ")
      leia(senha)
      
      enquanto senha <> 2002 faca
               escreva("Senha incorreta. Digite novamente: ")
               leia(senha)
      fimenquanto
      
      escreval("Senha correta. Acesso liberado")

Fimalgoritmo