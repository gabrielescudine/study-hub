Algoritmo "estruturaEnquanto"

Var

     x, soma :inteiro

Inicio

      soma <- 0
      
      escreva("Digite o 1º número:  ")
      leia(x)
      
      enquanto x <> 0 faca
               soma <- x + soma
               escreva("Digite outro número: ")
               leia(x)
      fimenquanto
      
      escreval
      escreval("Soma = ", soma)

Fimalgoritmo