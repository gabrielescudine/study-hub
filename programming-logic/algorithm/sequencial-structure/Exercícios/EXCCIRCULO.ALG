Algoritmo "excCirculo"

Var

     x, area, raio : real

Inicio

      x <- Pi

      
      escreva("Insira o raio do círculo: ")
      leia(raio)
      
      raio <- Exp(raio,2.0)
      area <- (raio * x)
      escreval
      escreval("CONCLUSÃO:")
      escreval("A área do círculo é: ", area:1:3)


Fimalgoritmo