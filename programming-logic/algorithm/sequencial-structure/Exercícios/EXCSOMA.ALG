Algoritmo "EXCSoma"

Var
      x, y : inteiro
      soma : inteiro


Inicio

      escreval("Calculadora de soma.")
      escreval("Digite dois valores, um p/ X e outro p/ Y.")
      escreva("X: ")
      leia(x)
      escreva("Y: ")
      leia(y)
      
      soma <- x + y
      
      escreva("Logo, a soma é: ", soma)


Fimalgoritmo